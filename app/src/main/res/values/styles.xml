<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">

        <item name="qmui_config_color_blue">@color/material_white</item>
        <!--topbar样式-->
        <item name="QMUITopBarStyle">@style/QDTopBarWhite</item>
        <!--topbar高度-->
        <item name="qmui_topbar_height">@dimen/app_topbar_height</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_white</item>
        <item name="colorPrimaryDark">@color/material_white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="actionBarSize">@dimen/app_topbar_height</item>
    </style>

    <!--弃用这个TopBar，使用自带Toolbar-->
    <style name="QDTopBarWhite" parent="QMUI.TopBar">
        <!--topbar的背景颜色(白色主题)-->
        <item name="qmui_topbar_bg_color">@color/material_white</item>
        <item name="qmui_topbar_title_color">@color/topbar_color</item>
        <item name="qmui_topbar_subtitle_color">@color/topbar_color</item>
        <item name="qmui_topbar_left_back_drawable_id">@drawable/ic_topbar_back_custom</item>
        <item name="qmui_topbar_text_btn_color_state_list">@color/s_topbar_text_btn_color</item>
        <item name="qmui_topbar_text_btn_text_size">15sp</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/topbar_color</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
